<div class="w-full flex justify-center">
  {% if session_has_flash('error') %}
    <div class="fixed top-4 left-1/2 -translate-x-1/2 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-lg z-50" role="alert">
      <strong class="font-bold">Erro:</strong>
      <span class="block sm:inline">{{ session_get_flash('error') }}</span>
    </div>
  {% endif %}

  {% if session_has_flash('success') %}
    <div class="fixed top-4 left-1/2 -translate-x-1/2 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg z-50" role="alert">
      <strong class="font-bold">Sucesso:</strong>
      <span class="block sm:inline">{{ session_get_flash('success') }}</span>
    </div>
  {% endif %}
</div>
