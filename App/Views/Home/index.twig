{% extends "layout.twig" %}

{% block content %}
	<div class="max-w-5xl mx-auto mt-10">
		<h1 class="text-3xl font-bold text-gray-800 mb-8">Welcome to the Dashboard</h1>

		<div
			class="grid grid-cols-1 sm:grid-cols-2 gap-6">

			<!-- View Users -->
			<a href="/users" class="block bg-white border border-gray-200 rounded-xl shadow p-6 hover:shadow-lg transition">
				<h2 class="text-xl font-semibold text-blue-700 mb-2">View Users</h2>
				<p class="text-gray-600 text-sm">See the list of all registered users.</p>
			</a>

			<!-- Add User -->
			<a href="/users/create" class="block bg-white border border-gray-200 rounded-xl shadow p-6 hover:shadow-lg transition">
				<h2 class="text-xl font-semibold text-green-700 mb-2">Add User</h2>
				<p class="text-gray-600 text-sm">Register a new user in the system.</p>
			</a>

			<!-- View Companies -->
			<a href="/companies" class="block bg-white border border-gray-200 rounded-xl shadow p-6 hover:shadow-lg transition">
				<h2 class="text-xl font-semibold text-blue-700 mb-2">View Companies</h2>
				<p class="text-gray-600 text-sm">Browse the list of companies.</p>
			</a>

			<!-- Add Company -->
			<a href="/companies/create" class="block bg-white border border-gray-200 rounded-xl shadow p-6 hover:shadow-lg transition">
				<h2 class="text-xl font-semibold text-green-700 mb-2">Add Company</h2>
				<p class="text-gray-600 text-sm">Register a new company to the system.</p>
			</a>

		</div>
	</div>
{% endblock %}
