{% extends "layout.twig" %}

{% block content %}

<section class="flex justify-center items-center py-10 bg-gray-100 min-h-screen">
  <div class="w-full max-w-xl bg-white shadow-lg rounded-xl p-8">
    <h2 class="text-2xl font-semibold mb-6 text-gray-800">Edit User</h2>

    <form method="post" action="/users/{{ user.id }}" class="space-y-6">
      <input type="hidden" name="__method" value="PUT" />

    <div class="flex items-center space-x-3">
      <input type="hidden" name="is_active" value="0" />
      <input type="checkbox" id="is_active" name="is_active" value="1" class="h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" {{ user.isActive ? 'checked' : '' }} />
      <label for="is_active" class="text-gray-700 font-medium select-none">Active</label>
      {{ flash_form('is_active') | raw }}
    </div>
    
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" id="name" name="name" placeholder="Your Name" value="{{ user.name }}" class="p-2 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        {{ flash_form('name') | raw }}
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Your Email</label>
        <input type="text" id="email" name="email" placeholder="Your Email" value="{{ user.email }}" class="p-2 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        {{ flash_form('email') | raw }}
      </div>

      <div>
        <label for="company_id" class="block text-sm font-medium text-gray-700">Company ID</label>
        <input type="text" id="company_id" name="company_id" placeholder="Your Company ID" value="{{ user.companyId }}" class="p-2 mt-1 block w-full rounded-md border border-gray-300 bg-gray-100 text-gray-400 shadow-sm focus:ring-blue-500 focus:border-blue-500" readonly/>
        {{ flash_form('company_id') | raw }}
      </div>

      <div>
        <label for="level" class="block text-sm font-medium text-gray-700">Level</label>
        <input type="text" id="level" name="level" placeholder="Your Level" value="{{ user.level }}" class="p-2 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        {{ flash_form('level') | raw }}
      </div>

      <div>
        <button type="submit" class="cursor-pointer w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md shadow-sm transition">
          Edit user
        </button>
      </div>
    </form>

    <div class="mt-8">
      <a href="/users" 
        class="inline-block text-blue-600 hover:text-blue-800 font-semibold rounded-md border border-blue-600 px-4 py-2 transition">
        &larr; Back to Home
      </a>
    </div>
  </div>
</section>
{% endblock %}