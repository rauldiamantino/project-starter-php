{% extends "layout.twig" %}

{% block content %}

<section class="max-w-3xl mx-auto mt-12 bg-white p-8 rounded-lg shadow-md">

  <h2 class="text-3xl font-bold mb-6 text-gray-800">User Details</h2>

  <div class="space-y-4 text-gray-700">
    <div>
      <span class="font-semibold text-gray-900">ID:</span> {{ user.id }}
    </div>
    <div>
      <span class="font-semibold text-gray-900">Name:</span> {{ user.name }}
    </div>
    <div>
      <span class="font-semibold text-gray-900">Email:</span> {{ user.email }}
    </div>
    <div>
      <span class="font-semibold text-gray-900">Company ID:</span> {{ user.company_id }}
    </div>
    <div>
      <span class="font-semibold text-gray-900">Level:</span> {{ user.level }}
    </div>
  </div>

  <div class="mt-8">
    <a href="/users" 
       class="inline-block text-blue-600 hover:text-blue-800 font-semibold rounded-md border border-blue-600 px-4 py-2 transition">
      &larr; Back to Users
    </a>
  </div>

</section>

{% endblock %}
