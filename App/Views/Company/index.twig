{% extends "layout.twig" %}

{% block content %}
<div class="max-w-4xl mx-auto mt-10">
	<h2 class="text-3xl font-bold text-gray-800 mb-6">Companies</h2>

	{% if companies %}
	<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
		{% for company in companies %}
		<div class="bg-white border border-gray-200 rounded-xl shadow p-5 hover:shadow-md transition">
			<p class="text-sm text-gray-500">ID:
				<span class="font-medium text-gray-700">{{ company.id }}</span>
			</p>
			<p class="text-lg font-semibold text-gray-800 mt-1">
				{{ company.name }}
				<div class="flex gap-2 items-center">
					<form method="POST" action="/companies/{{ company.id }}">
						<input type="hidden" name="__method" value="DELETE">
						<button type="submit" class="cursor-pointer text-red-800">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
							</svg>
						</button>
					</form>
					<form method="GET" action="/companies/{{ company.id }}">
						<button type="submit" class="cursor-pointer text-blue-800">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
							</svg>
						</button>
					</form>
				</div>
			</p>
		</div>
		{% endfor %}
	</div>
	{% else %}
	<div class="bg-yellow-100 text-yellow-800 border border-yellow-300 px-4 py-3 rounded shadow">
		No companies found
	</div>
	{% endif %}

	<div class="mt-8">
		<a href="/"
			class="inline-block text-blue-600 hover:text-blue-800 font-semibold rounded-md border border-blue-600 px-4 py-2 transition">
			&larr; Back to Home
		</a>
	</div>
</div>
{% endblock %}