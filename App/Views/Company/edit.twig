{% extends "layout.twig" %}

{% block content %}

<form action="/companies/{{ company.id }}" method="POST" class="max-w-3xl mx-auto bg-white shadow-md rounded-lg p-8 space-y-6">
  <input type="hidden" name="__method" value="PUT">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6">Edit Company</h2>

  <div class="flex items-center space-x-3">
    <input type="hidden" name="is_active" value="0" />
    <input type="checkbox" id="is_active" name="is_active" value="1"
      class="h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" {{ company.isActive ? 'checked' : '' }} />
    <label for="is_active" class="text-gray-700 font-medium select-none">Active</label>
    {{ flash_form('is_active') | raw }}
  </div>

  <div>
    <label for="name" class="block text-gray-700 font-semibold mb-2">Name</label>
    <input type="text" id="name" name="name" value="{{ company.name }}" required
      class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
      placeholder="Enter the company name" />
  </div>

  <div>
    <label for="slug-readonly" class="block text-gray-700 font-semibold mb-2">Slug</label>
    <input type="text" id="slug-readonly" name="slug-readonly" value="{{ company.slug }}" readonly
      class="w-full px-4 py-2 border border-gray-300 bg-gray-100 text-gray-400 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
      placeholder="example: my-company" />
      {{ flash_form('slug') | raw }}
  </div>

  <div>
    <label for="cnpj" class="block text-gray-700 font-semibold mb-2">CNPJ</label>
    <input type="text" id="cnpj" name="cnpj" value="{{ company.cnpj }}" required maxlength="18"
      class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
      placeholder="00.000.000/0000-00" />
      {{ flash_form('cnpj') | raw }}
  </div>

  <div class="pt-4 border-t border-gray-200">
    <button type="submit"
      class="w-full bg-blue-600 text-white py-3 rounded-md font-semibold hover:bg-blue-700 transition">
      Update Company
    </button>
  </div>
</form>

{% endblock %}